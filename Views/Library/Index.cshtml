@model IEnumerable<Papers>
@{

    ViewData["Title"] = "Library";
}

<h1>Library</h1>

 <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary"> Paper List </h2>
            <hr />
        </div>
    <div class="col-6" </div>
            <a asp-controller="Library" asp-action="PaperUpload" class="btn btn-primary">
                <i class="bi bi-file-earmark-arrow-up"></i> &nbsp; Upload New Paper
            </a>
    </div>
    <br /><br />


    <table class=" table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Field
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">
                        @obj.Title
                    </td>
                    <td width="50%">
                        @obj.Course
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>